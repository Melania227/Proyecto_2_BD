@model Proyecto_2_BD.Models.Modelo.Humano_Usuario

@{
    ViewBag.Title = "Nuevo Usuario";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


<head>
    <style>
        .container2 {
            width: 350px;
            margin-right: auto;
            margin-left: auto;
        }

        .imgcontainer {
            text-align: center;
            margin: 24px 0 12px 0;
            position: relative;
        }

        .c3 {
            text-align: center;
        }
        /* Modal Content/Box */
        .modal-content {
            background-color: #fefefe;
            margin: 5% auto 15% auto; /* 5% from the top, 15% from the bottom and centered */
            border: 1px solid #888;
            width: 80%; /* Could be more or less, depending on screen size */
        }

        .page-section {
            padding-top: 1rem;
            padding-bottom: 1rem;
        }

        .bg-dark {
            background-image: linear-gradient(to bottom, rgba(92, 77, 66, 0.7) 0%, rgba(92, 77, 66, 0.8) 100%), url('../../Content/assets/img/photo.jpg');
        }
    </style>
</head>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <section class="page-section bg-dark text-white">
        <div class="container text-center">
            <br>
            <div class="imgcontainer">
                <i class="fas fa-4x fa-user-plus text-primary mb-4"></i>
            </div>
            <h2 class="text-center mt-0">Nuevo Usuario</h2>
            <hr class="divider my-3" />
        </div>
    </section>
    <br>
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container2 text-center">

            <div class="form-group">
                <h3 class="h4 mb-2 c3">Nombre</h3>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese Nombre" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h3 class="h4 mb-2 c3">Apellidos</h3>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese Apellidos" } })
                    @Html.ValidationMessageFor(model => model.Apellidos, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h3 class="h4 mb-2 c3">Cédula</h3>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Cedula, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese Cédula" } })
                    @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h3 class="h4 mb-2 c3">Correo Electrónico</h3>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese Correo" } })
                    @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h3 class="h4 mb-2 c3">Fecha de Nacimiento</h3>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Fec_Nacimiento, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.Fec_Nacimiento, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h3 class="h4 mb-2 c3">Dirección</h3>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese dirección" } })
                    @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h3 class="h4 mb-2 c3">Sexo</h3>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Sexo, (SelectList)ViewBag.sexo, new { @class = "form-control", placeholder = "Escoja telefono" })
                    @Html.ValidationMessageFor(model => model.Sexo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h3 class="h4 mb-2 c3">Teléfono</h3>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NumCasa, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese telefono" } })
                    @Html.ValidationMessageFor(model => model.NumCasa, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <h3 class="h4 mb-2 c3">Teléfono celular</h3>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NumTelefono, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese telefono" } })
                    @Html.ValidationMessageFor(model => model.NumTelefono, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h3 class="h4 mb-2 c3">Otro número</h3>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NumOtro, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese otro telefono" } })
                    @Html.ValidationMessageFor(model => model.NumOtro, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h3 class="h4 mb-2 c3">Nombre de Usuario</h3>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese usuario" } })
                    @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
                    <p id="Status" />
                </div>
            </div>

            <div class="form-group">
                <h3 class="h4 mb-2 c3">Contraseña</h3>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password_, new { htmlAttributes = new { @class = "form-control", type = "password", placeholder = "Ingrese contraseña" } })

                    @Html.ValidationMessageFor(model => model.Password_, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h3 class="h4 mb-2 c3">Teatro</h3>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Teatro, (SelectList)ViewBag.Teatro, new { @class = "form-control", placeholder = "No hay teatros disponibles" })
                    @Html.ValidationMessageFor(model => model.Teatro, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h3 class="h4 mb-2 c3">Puesto</h3>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Tipo, (SelectList)ViewBag.Tipos, new { @class = "form-control", placeholder = "No hay teatros disponibles" })
                    @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Agregar" class="btn btn-primary btn-xl js-scroll-trigger" />
                </div>
            </div>

        </div>
    </div>

    if (ViewBag.Msg != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("Usuario agregado correctamente");
                window.location.href = "/Acceso/Login"  //Aun no sé para donde mandar esto
            }
        </script>
    }
}