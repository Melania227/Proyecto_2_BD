@model Proyecto_2_BD.Models.Modelo.Presentacion_


@{
    ViewBag.Title = "Nueva Presentación";
}

<head>
    <style>
        .container2 {
            width: 350px;
            margin-right: auto;
            margin-left: auto;
        }

        .imgcontainer {
            text-align: center;
            margin: 24px 0 12px 0;
            position: relative;
        }

        .c3 {
            text-align: center;
        }
        /* Modal Content/Box */
        .modal-content {
            background-color: #fefefe;
            margin: 5% auto 15% auto; /* 5% from the top, 15% from the bottom and centered */
            border: 1px solid #888;
            width: 80%; /* Could be more or less, depending on screen size */
        }

        .page-section {
            padding-top: 1rem;
            padding-bottom: 1rem;
        }

        .bg-dark {
            background-image: linear-gradient(to bottom, rgba(92, 77, 66, 0.7) 0%, rgba(92, 77, 66, 0.8) 100%), url('../../Content/assets/img/img.jpg');
        }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            width: 40%;
            border-radius: 5px;
            margin: 20px;
            padding: 15px;
        }

        img {
            padding-top: 5px;
            padding-bottom: 5px;
            border-radius: 8px;
            display: block;
            margin-left: auto;
            margin-right: auto;
            height: 200px;
            width: 600px;
        }

        .container3 {
            padding-left: 5px;
        }

        }

        .b {
            color: #d60c0c;
            text-decoration: underline;
        }

        .column {
            float: left;
            width: 33.33%;
        }

        /* Clear floats after the columns */
        .row:after {
            content: "";
            display: table;
            clear: both;
        }

        hr.divider {
            max-width: 3.25rem;
            border-width: 0.2rem;
            border-color: #fff;
        }
    </style>
</head>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <section class="page-section bg-dark text-white">
        <div class="container text-center">
            <br>
            <div class="imgcontainer">
                <i class="fas fa-4x fa-images"></i>
            </div>
            <h2 class="text-center mt-0">Nueva presentación</h2>
            <hr class="divider  my-4" />
        </div>
    </section>
    <br>
    <div class="form-horizontal">
        <div class="row justify-content-center">
            <div class="card" style="width: 20%">
                <img src='../../Content/assets/img/pin.png' alt="Avatar" style="width: 75% ">
                <div class="container3">
                    <div class="container2 text-center">
                        <h2 class="h4 mb-2 c3">Agregar Presentación</h2>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <h3 class="h4 mb-2 c3">Produccion</h3>
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.IdProduccion, (SelectList)ViewBag.Prod, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdProduccion, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <h3 class="h4 mb-2 c3">Hora</h3>
                            <div class="col-md-10">
                                <input type="time" id="Hora" name="Hora" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <h3 class="h4 mb-2 c3">Fecha</h3>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Agregar" class="btn btn-primary btn-xl js-scroll-trigger" />
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            
        </div>
    </div>


}